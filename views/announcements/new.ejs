<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
    <div class="d-flex justify-content-center">
        <form  action="/announcements" method="POST">
            <div class="form-row">
                <div class="form-group col-md-12 form-center">
                    <h2 class="form-title">New Announcement</h2>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12 form-left form-style">
                     <label class="required" for="inputName">Announcement Subject</label>
                     <input type="text" class="form-control" id="inputName" name="name" placeholder="Announcement Subject" required = 'required' autofocus>
                </div>
            </div>
            <div class="fill-height-small"></div>
            <div class="form-row">
                <div class="form-group col-md-12 form-left form-style">
                     <label class="required" for="inputName">Description</label>
                     <textarea class="form-control rounded-0" id="inputDesc" rows="5" cols="50" name="desc" required = 'required'></textarea>
                </div>
            </div>
            <div class="fill-height-small"></div>
            <div class="form-row">
                <div class="form-group col-md-12 form-center form-style">
                     <button type="submit" class="btn btn-primary btn-md">Submit</button>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12 form-left form-style">
                    <a class="btn btn-default" href="/announcements/index"><i class="fa fa-arrow-left"></i> Go back</a>
                </div>
            </div>
        </form>
    </div>
</header>
</div>  

<% include ../partials/footer %>