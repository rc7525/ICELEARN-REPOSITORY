<% include ../partials/header%>
<div class="container">
     <header class="jumbotron">
    <div class="d-flex justify-content-center">
        <div class="col-md-12">
            <form  action="/admin-register" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-12 form-center">
                        <h2 class="form-title">Admin Sign Up</h2>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                      <label class="required form-style" for="inputUsername">Email address</label>
                      <input type="email" class="form-control form-style" id="inputUsername" name="username" placeholder="Email address" required = 'required' autofocus>
                    </div>
                    <div class="form-group col-md-6">
                      <label class="required form-style" for="inputPassword4">Password</label>
                      <input type="password" class="form-control form-style" id="inputPassword" name="password" placeholder="Password" required = 'required' autofocus>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                      <label class="required form-style" for="inputFirstname">First Name</label> 
                      <input type="text" class="form-control form-style" id="inputFirstname" name="firstName" placeholder="First Name" required = 'required' autofocus>
                    </div>
                    <div class="form-group col-md-6">
                      <label class="required form-style" for="lastLastname">Last Name</label>
                      <input type="text" class="form-control form-style" id="lastLastname" name="lastName" placeholder="Last Name" required = 'required' autofocus>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="required form-style" for="inputAdminCode">Admin Code</label>
                          <input type="password" class="form-control form-style" id="inputAdminCode" name="adminCode" placeholder="Admin Code" autofocus>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                    </div>
                    <div class="form-group col-md-2 form-style form-center">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                    <div class="form-group col-md-4">
                    </div>
                </div>
                <div class="fill-height-medium"></div>
            </form>
        </div>    
    </div>
      </header>
</div>    
<% include ../partials/footer %>