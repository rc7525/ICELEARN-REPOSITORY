<div class="container">
    <header class="jumbotron">
        <div class="d-flex justify-content-center " >    
            <div class="row">
                <form action="/forgot" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-12 form-center"> 
                            <h2 class="form-title">Password Reset</h2>
